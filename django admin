from django.contrib import admin
from .models import Note, Tag, NoteDetails

class NoteDetailsInline(admin.StackedInline):
    model = NoteDetails
    can_delete = False
    verbose_name_plural = 'Детализация'
    fieldsets = [
        (None, {
            'fields': ('is_important', 'priority_level')
        }),
    ]

@admin.register(Note)
class NoteAdmin(admin.ModelAdmin):
    list_display = (
        'id', 
        'display_content', 
        'user', 
        'display_is_important',
        'created_at', 
        'display_tags'
    )
    
    list_filter = (
        'user', 
        'created_at', 
        'details__is_important', 
        'tags'
    )
    
    search_fields = (
        'content', 
        'user__username'
    )
    
    list_per_page = 3
    
    inlines = [NoteDetailsInline]

    def display_content(self, obj):
        return obj.content[:50]
    display_content.short_description = 'Содержимое'
    
    def display_is_important(self, obj):
        return obj.details.is_important
    display_is_important.boolean = True
    display_is_important.short_description = 'Важно'

    def display_tags(self, obj):
        return ", ".join([tag.name for tag in obj.tags.all()])
    display_tags.short_description = 'Теги'

@admin.register(Tag)
class TagAdmin(admin.ModelAdmin):
    list_display = ('name',)
    search_fields = ('name',)

# NoteDetails не регистрируется отдельно, так как он встроен через Inline в NoteAdmin
